server {
    listen 80;
    listen [::]:80;

    root /home/kriekon/api/api.kriekon.com;
    index index.php;

    server_name local.api.kriekon.com;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }
}
